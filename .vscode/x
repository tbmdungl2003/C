void LineMerge(FILE *f1, FILE *f2, FILE *f3){char buff1[MAX_LEN], buff2[MAX_LEN]; intlen;while((fgets(buff1, MAX_LEN, f1) != NULL)&& (fgets(buff2, MAX_LEN, f2) != NULL)) {fputs(buff1,f3);fputs(buff2,f3);}if (buff1!= NULL) fputs(buff1,f3);while(fgets(buff1, MAX_LEN, f1) != NULL{fputs(buff1,f3);}while(fgets(buff2, MAX_LEN, f2) != NULL{fputs(buff2,f3);}}void LineMerge(FILE *f1, FILE *f2, FILE *f3){char buff1[MAX_LEN], buff2[MAX_LEN]; intlen;while((fgets(buff1, MAX_LEN, f1) != NULL)&& (fgets(buff2, MAX_LEN, f2) != NULL)) {fputs(buff1,f3);fputs(buff2,f3);}if (buff1!= NULL) fputs(buff1,f3);while(fgets(buff1, MAX_LEN, f1) != NULL{fputs(buff1,f3);}while(fgets(buff2, MAX_LEN, f2) != NULL{fputs(buff2,f3);}}